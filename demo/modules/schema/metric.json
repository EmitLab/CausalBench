{
    "type": "object",
    "properties": {
        "type": {"const": "metric"},
        "name": {"type": "string"},
        "task": {"enum": ["discovery"]},
        "path": {"type": "string"},
        "inputs": {
            "type": "object",
            "propertyNames": {"enum": ["ground", "prediction"]},
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "id": {"type": "string"},
                        "data": {"enum": ["dataframe", "graph"]}
                    },
                    "required": ["id", "data"]
                }
            }
        },
        "output": {
            "type": "object",
            "properties": {
                "score": {
                    "type": "object",
                    "properties": {
                        "id": {"type": "string"},
                        "data": {"enum": ["decimal"]}
                    },
                    "required": ["id", "data"]
                }
            },
            "required": ["score"]
        }
    },
    "required": ["type", "name", "task", "path", "inputs", "output"]
}
